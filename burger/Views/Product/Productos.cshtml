@model burger.Models.ProductosModel
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div>
    <h2>Productos</h2>
    <p>
        En esta seccion se encuentran los productos en exposición.<br />
    </p>
</div>
<hr />
<table class="customers">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Precio</th>
        <th></th>
    </tr>
    @foreach (var producto in Model.Productos)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Nombre</td>
            <td>@producto.Descripcion</td>
            <td>@producto.Precio</td>
            <td>
                <a href="Admin/Edit/@producto.Id"><i class="fas fa-pen"></i></a>&nbsp;
                <a class="text-danger" href="Admin/Delete/@producto.Id"><i class="fas fa-minus-circle"></i></a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-info" href="/Admin">Volver Atras</a>

