@model burger.Models.UserModel

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div>
    <h2>Usuarios</h2>
    <h4>Hola @Model.UsuarioLogueado !</h4>
    <p>
        En esta seccion se muestran los usuarios registrados. Otorgue permisos, elimine inactivos, autorice nuevos.<br />
        <em>0 = Usuario normal / 1 = Administrador</em>
    </p>
</div>
<hr />
<table class="customers">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Usuario</th>
        <th>Permisos</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var usuario in Model.ListaUsuarios)
    {
        <tr>
            <td>@usuario.Id</td>
            <td>@usuario.Nombre</td>
            <td>@usuario.Usuario</td>
            <td>@usuario.Role</td>
            <td>@usuario.Email</td>
            <td>
                <a href="/Admin/Detalle/@usuario.Id"><i class="fas fa-pen"></i></a>&nbsp;
                <a class="text-danger" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-minus-circle"></i></a>
            </td>
        </tr>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirmar</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ¿Esta seguro que desea eliminar esto?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <a href="/Admin/Delete/@usuario.Id" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</table>

<br />
<a class="btn btn-info" href="/Admin">Volver Atras</a>

